<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.permission.rjq.marqueeviewdemo.MarqueeView
        android:inAnimation="@anim/marquee_anim_bottom_in"
        android:outAnimation="@anim/marquee_anim_top_out"
        android:flipInterval="2000"
        app:mvGravity="center"
        app:mvRollModel="forever"
        app:mvSingleLine="true"
        app:mvTextColor="#696fd8"
        app:mvTextSize="12sp"
        android:id="@+id/marquee_view"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>